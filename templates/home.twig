{% extends 'main.twig' %}
{% block body %}
    <a class="m-lg-2" href="/create">
        <button type="submit" name="show" class="btn btn-primary mt-4">Create user</button>
    </a>
    <a class="m-lg-2" href="/auth">
        <button type="submit" name="auth" class="btn btn-primary mt-4">Auth</button>
    </a>
    {% if users is not empty %}
        <div class="table container">
            <table class="table table-hover table-responsive table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.gender }}</td>
                        <td>{{ user.status }}</td>
                        <td>
                            <a href="/edit?id={{ user.id }}" class="btn btn-info left-margin">
                                <span class="glyphicon glyphicon-edit">Edit</span>
                            </a>
                            <a href="/delete?id={{ user.id }}" class="btn btn-danger delete-object">
                                <span class="glyphicon glyphicon-remove">Delete</span>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    {% endif %}
{% endblock %}
{% extends 'main.twig' %}
{% block body %}
    <div class="container">
        {% if user.success is not empty %}
            <div class="alert alert-success" role="alert">
                {{ user.success }}
            </div>
        {% endif %}
        <form method="post" action="">
            <div class="form-group">
                <label for="email">Email address</label>
                <input id="email" type="email" name="email" placeholder="Enter email" value="{{ user.email }}"
                       class="form-control {% if user.errors.email is defined %}is-invalid{% endif %}"
                >
                {% if user.errors.email is not empty %}
                    <div class="invalid-feedback">
                        {{ user.errors.email }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="name">Your first and last name</label>
                <input id="name" type="text" name="name" placeholder="Enter first and last name" value="{{ user.name }}"
                       class="form-control {% if user.errors.name is defined %}is-invalid{% endif %}"
                >
                {% if user.errors.name is not empty %}
                    <div class="invalid-feedback">
                        {{ user.errors.name }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="exampleSelect1">Gender</label>
                <select class="form-control" id="exampleSelect1" name="gender">
                    {% if user.gender == 'female'  %}
                        <option value="male">male</option>
                        <option value="female" selected="selected">female</option>
                    {% else %}
                        <option value="male" selected="selected">male</option>
                        <option value="female">female</option>
                    {% endif %}
                </select>
            </div>
            <div class="form-group">
                <label for="exampleSelect2">Status</label>
                <select class="form-control" id="exampleSelect2" name="status">
                    {% if user.status == 'inactive' %}
                        <option value="active">active</option>
                        <option value="inactive" selected="selected">inactive</option>
                    {% else %}
                        <option value="active" selected="selected">active</option>
                        <option value="inactive">inactive</option>
                    {% endif %}
                </select>
            </div>
            <button type="submit" name="create" value="go" class="btn btn-primary">Create user</button>
        </form>
    </div>
{% endblock %}
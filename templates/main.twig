<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <title>Task1</title>
</head>
<body style="margin: 0 auto;">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="/upload">Upload a file</a>
            </li>
        </ul>
    </div>
    <div class="my_div">
        {% if session.auth == 'yes' %}
            <a class="m-lg-2" href="/logout">
                <button type="submit" name="auth" class="btn btn-primary">Log out</button>
            </a>
        {% else %}
            <a class="m-lg-2" href="/register">
                <button type="submit" name="show" class="btn btn-primary">Sign up</button>
            </a>
            <a class="m-lg-2" href="/auth">
                <button type="submit" name="auth" class="btn btn-primary">Sign in</button>
            </a>
        {% endif %}
    </div>
</nav>
{% block body %}{% endblock %}
<script src="/assets/js/script.js"></script>
</body>
</html>
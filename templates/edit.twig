{% extends 'main.twig' %}
{% block body %}
<div class="container">
    <form method="post" action="">
        {% if user.success is not empty %}
            <div class="alert alert-success" role="alert">
                {{ user.success }}
            </div>
        {% endif %}
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" name="email" class="form-control"
                   placeholder="Enter email" value="{{ user.email }}" readonly>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Your first and last name</label>
            <input type="text" name="name" class="form-control {% if user.errors.name is defined %}is-invalid{% endif %}"
                   placeholder="Enter first and last name" value="{{ user.name }}">
            {% if user.errors.name is not empty %}
                <div class="invalid-feedback">
                    {{ user.errors.name }}
                </div>
            {% endif %}
        </div>
        <div class="form-group">
            <label for="exampleSelect1">Gender</label>
            <select class="form-control" id="exampleSelect1" name="gender">
                {% if user.gender == 'female'  %}
                    <option value="male">male</option>
                    <option value="female" selected="selected">female</option>
                {% else %}
                    <option value="male" selected="selected">male</option>
                    <option value="female">female</option>
                {% endif %}
            </select>
        </div>

        <div class="form-group">
            <label for="exampleSelect2">Status</label>
            <select class="form-control" id="exampleSelect2" name="status">
                {% if user.status == 'inactive' %}
                    <option value="active">active</option>
                    <option value="inactive" selected="selected">inactive</option>
                {% else %}
                    <option value="active" selected="selected">active</option>
                    <option value="inactive">inactive</option>
                {% endif %}
            </select>
        </div>
        <div class="row">
            <div class="col">
                <button type="submit" name="edit" value="go" class="btn btn-primary">Update user</button>
            </div>
            <div class="col">
                <a href="/" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>
</div>
{% endblock %}